<div class="button
    dib
    truncate
    {{if sin_margenes '' 'pa2'}}
    verdana f7 link pointer
    black bg-animate b--black-20
    unselectable
    m0
    {{if deshabilitado "o-60 disabled"}}
    {{if variable "bg-black-10"}}
    {{if rojo "white bg-red"}}
    "
  {{action "alternar"}}
>
  {{#if variable}}
    {{pilas-icono icono='on'}} <span class='dn di-ns'>{{texto}}</span> <span class='di dn-ns'>{{texto_corto}}</span>{{yield}}
  {{else}}
    {{pilas-icono icono='off'}} <span class='dn di-ns'>{{texto}}</span> <span class='di dn-ns'>{{texto_corto}}</span>{{yield}}
  {{/if}}
</div>
